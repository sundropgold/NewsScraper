{{!-- JUMBOTRON BANNER & SCRAPER BUTTON--}}
<div class="jumbotron">
	<div class="container">
		<img src="https://assets2.onionstatic.com/onion/static/images/favicon-120x120.png" id="onion-icon"/><h1>The Onion Local News Scraper</h1>
	</div>
</div>

<div class="container">


	{{!-- ARTICLES POPULATE HERE --}}
	<div class="row">

		<div class="col-md-12" id="articles-display">

			{{#each articles}}

				<div class="panel panel-default">
					<div class="panel-body">
						{{!-- populate articles with headline and links --}}
						<a href="http://www.theonion.com{{this.link}}">{{this.headline}}</a>

						<div class="btn-div">
							{{!-- save button next to each article--}}
							<button type="button" class="btn btn-default save-article-btn" data-id="{{this._id}}">save</button>

							{{!-- delete article button next to each article --}}
							<button type="button" class="btn btn-default delete-article-btn" data-id="{{this._id}}">delete</button>
						</div>
					</div>
				</div>

			{{/each}}

		</div>
	</div>

</div>